{
  "extends": "@project/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/next/*": ["src/next/*"],
      "@/types/*": ["src/types/*"],
      "@/views/*": ["src/views/*"],
      "@/components/*": ["src/components/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
